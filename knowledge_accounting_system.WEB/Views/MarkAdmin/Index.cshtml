@using knowledge_accounting_system.BLL.Infrastructure
@using knowledge_accounting_system.BLL.DTO
@model IEnumerable<MarkDTO>

@{
    ViewBag.Title = "Предметы";
    Layout = "~/Views/Shared/_Menu.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">Marks</div>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th style="min-width: 150px"></th>
        </tr>
        @if (Model == null || Model.Count() == 0)
        {
            <tr>
                <td colspan="4" class="text-center">Нет предметов</td>
            </tr>
        }
        else
        {
            foreach (MarkDTO mark in Model)
            {
                <tr>
                    <td>@mark.Id</td>
                    <td>@mark.Name</td>
                    <td>
                        @using (Html.BeginForm("Delete", "MarkAdmin", new { id = mark.Id }))
                        {
                            <button class="btn btn-danger btn-xs" type="submit" style="float:right">Удалить</button>
                        }
                    </td>
                </tr>
            }
        }
    </table>
</div>
<div>
    @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Выйти", "Logout", "Account", null, new { @class = "btn btn-primary", style = "float:right; margin-left:10px" })
    @Html.ActionLink("Юзеры", "Index", "Admin", null, new { @class = "btn btn-primary", style = "float:right; margin-left:10px" })
    @Html.ActionLink("Роли", "Index", "RoleAdmin", null, new { @class = "btn btn-primary", style = "float:right" })
</div>