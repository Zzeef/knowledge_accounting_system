@model knowledge_accounting_system.WEB.Models.RegisterModel

@{
    ViewBag.Title = "Создание пользователя";
    Layout = "~/Views/Shared/_Menu.cshtml";
}

@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Имя</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Пароль</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Повторите пароль</label>
        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Выберите роль</label>

        <div class="form-check">
            @Html.RadioButtonFor(x => x.Role, "User", new { @class = "form-check-input", style = "margin-left:10px" })
            <label class="form-check-label" for="flexRadioDefault2" style="margin-left: 30px">
                Юзер
            </label>
        </div>

        <div class="form-check">
            @Html.RadioButtonFor(x => x.Role, "Manager", new { @class = "form-check-input", style = "margin-left:10px" })
            <label class="form-check-label" for="flexRadioDefault2" style="margin-left: 30px">
                Менеджер
            </label>
        </div>
    </div>
   
    <button type="submit" class="btn btn-primary">Создать</button>

    @Html.ActionLink("Отмена", "Login", null, new { @class = "btn btn-default" })
}
